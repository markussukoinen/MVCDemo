@{
    ViewData["Title"] = "Home Page";
}

@{


    
    string PäiväKello = DateTime.Now.ToString();
    string Kello = PäiväKello.Substring(PäiväKello.Length - 8);




}




    <div style="color: white" ; class="text-center">
        <h1 class="display-4">Pitter Patter</h1>
        <p>The time is @Kello </p>
        <!--  Default html5-soitin
         <audio controls>
            <source src="~/audioFiles/birdsAndCrickets.wav" />
        </audio>
        -->
        <audio autoplay loop id="soitin" src="~/audioFiles/birdsAndCrickets.wav"></audio>
        <div id="napit1">
            <!--Asettaa aluksi soittimen volan nollaan, eli vastaamaan sliderin alkuarvoa-->
            <script>
                var soitin = document.getElementById('soitin');

                soitin.volume = 0;

            </script>
            <!--soittimen napit: play, eli soita, ja pause, eli pysäytä tai tauko-->
            <button id="play-nappi" onclick="document.getElementById('soitin').play()">Play</button>
            <button onclick="document.getElementById('soitin').pause()">Pause</button>
            <!-- Tässä on volanapit, korvattu sliderilla
            <button onclick="document.getElementById('soitin').volume -= 0.1">Vol -</button>
            <button onclick="document.getElementById('soitin').volume += 0.1">Vol +</button> 
            -->
            <!--Äänenvoimakkuuden slider/liukusäädin, arvot nollasta sataan, askeleen koko 1 ja alkuarvo 0. Asettaa arvon kun siihen klikataan hiirellä ja myös heti kun sen arvo muuttuu ajamalla funktion "AsetaVola1"-->
            <input id="vol-control1" type="range" min="0" max="100" value="0" step="1" oninput="AsetaVola1(this.value)" onchange="AsetaVola1(this.value)"> 
            

           
            <script>
                function AsetaVola1(val) {
                    var soitin = document.getElementById('soitin');
                   
                    soitin.volume = val / 100;
                    
                }
            </script>
        </div>
        <audio autoplay loop id="soitin2" src="~/audioFiles/rainOnConrete.mp3"></audio>
        <div id="napit2">
            <script>
                var soitin = document.getElementById('soitin2');

                soitin.volume = 0;

            </script>
            <button onclick="document.getElementById('soitin2').play()">Play</button>
            <button onclick="document.getElementById('soitin2').pause()">Pause</button>
            <input id="vol-control2" type="range" min="0" max="100" value="0" step="1" oninput="AsetaVola2(this.value)" onchange="AsetaVola2(this.value)">


            <script>
                function AsetaVola2(val) {
                    var soitin = document.getElementById('soitin2');

                    soitin.volume = val / 100;

                }
            </script>
        </div>
    </div>
